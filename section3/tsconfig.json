{
  "include": ["src"],

  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowJs": true,
    "moduleDetection": "force",

    // ... 추가 옵션
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },

  "ts-node": {
    "esm": true
  }
}
